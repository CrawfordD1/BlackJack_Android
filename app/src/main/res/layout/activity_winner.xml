<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="example.codeclan.com.blackjack.WinnerActivity">

    <ImageView
        android:id="@+id/winnerView"
        android:layout_width="295dp"
        android:layout_height="287dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/playerwin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.411"
        />

    <TextView
        android:id="@+id/winAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        android:textColor="#bcb11c"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/playAgain_button"
        app:layout_constraintHorizontal_bias="0.251"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/winnerView"
        app:layout_constraintVertical_bias="0.503"
        tools:text="100000"/>

    <Button
        android:id="@+id/playAgain_button"
        style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
        android:layout_width="246dp"
        android:layout_height="53dp"
        android:onClick="onPAclick"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="@+id/winnerView"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/winnerView"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/winnerView"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/winnerView"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintVertical_bias="0.908"
        />

</android.support.constraint.ConstraintLayout>
